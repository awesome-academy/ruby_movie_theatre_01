<% provide :title, t(".log_in")%>
<div id= "main">
  <div class="row pt-4 pb-5">
    <h3 class="m-auto"><%= t ".log_in" %></h3>
  </div>
  <div class="row">
    <%= form_with scope: :session, url: login_path, class: "col-12", local: true do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control mt-1 mb-2" %>

      <%= f.label :password, t(".pass")%>
      <%= f.password_field :password, class: "form-control mt-1 mb-1" %>

      <%= f.label :remember_me, class: "checkbox d-block mt-3" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".remember_me" %></span>
      <% end %>

      <%= f.submit t(".log_in"), class: "btn btn-primary mt-3 mb-2" %>

    <% end %>

    <p><%= t ".new_user" %><%= link_to t("sign_up_now"), signup_path %></p>
  </div>
</div>
