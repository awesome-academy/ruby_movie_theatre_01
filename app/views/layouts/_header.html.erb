<div id="main">
  <header id="header">
    <div class="row-1">
      <%= link_to root_path, class: "fleft" do %>
        <span class="taw">VHK</span>
        <span class="taq">Cineplex</span>
      <% end %>
      <ul class="nav">
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <%= t ".account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
              <div class="dropdown-divider"></div>
              <li>
                <%= link_to t(".log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
          <li><%= link_to t(".signup"), signup_path %></li>
        <% end %>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
            <%= t ".language" %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "Eng", locale: "en" %></li>
            <li><%= link_to "Vie", locale: "vi" %></li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="row-2">
      <ul>
        <li><%= link_to t(".home"), root_path, class: "active" %></li>
        <li><%= link_to t(".movie") %></li>
        <li><%= link_to t(".cine") %></li>
        <li><%= link_to t(".fare") %></li>
        <li class="last"><%= link_to t(".news") %></li>
      </ul>
    </div>
  </header>
</div>
