<%= form_with model: @user, class: "col-12", local: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name, t(".name") %>
  <%= f.text_field :name, class: "form-control mt-1 mb-2" %>

  <%= f.label :phone, t(".phone") %>
  <%= f.text_field :phone, class: "form-control mt-1 mb-2" %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control mt-1 mb-2" %>

  <%= f.label :password, t(".pass") %>
  <%= f.password_field :password, class: "form-control mt-1 mb-2" %>

  <%= f.label :password_confirmation, t(".pass_confirm") %>
  <%= f.password_field :password_confirmation, class: "form-control mt-1 mb-1" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary mt-3 mb-5" %>
<% end %>
